#Circular Single List Menu Driven Code.
class Node:
  def __init__ (self,d):
    self.data=d
    self.next=None

class LinkedList:
  def __init__ (self):
    self.head=None

  def InsertBegin (self,d):
    Newnode=Node(d)
    if self.head is None:
      self.head=Newnode
      Newnode.next=Newnode
    else:
      temp=self.head
      Newnode.next=self.head
      while temp.next is not self.head:
        temp=temp.next
      temp.next=Newnode
      self.head=Newnode

  def InsertEnd (self,d):
    Newnode=Node(d)
    if self.head is None:
      self.head=Newnode
      Newnode.next=Newnode
    else:
      temp=self.head
      while temp.next is not self.head:
        temp=temp.next
      temp.next=Newnode
      Newnode.next=self.head

  def DeleteBegin(self):
    if self.head is None:
      print("Circular Linked List is Empty")
    else: 
      temp=self.head
      while temp.next is not self.head:
        temp=temp.next
      self.head=self.head.next
      temp.next=self.head
      print("\nDeletion at begin successfull.\n")

  def DeleteEnd(self):
    if self.head is None:
      print("Circular Linked List is Empty")
    else:
      temp=self.head
      while temp.next is not self.head:
        temp1=temp
        temp=temp.next
      temp1.next=self.head
      print("\nDeletion at end successfull.\n")

  def Display(self):
    if self.head is None:
      print("Circular single linked list is empty")
    else:
      print("\nDisplaying Nodes: \n")
      temp=self.head
      while temp.next is not self.head:
        print(temp.data,end="->")
        temp=temp.next
      print(temp.data)

ch=None
L1=LinkedList()
print("""Please Select Your Choice
0.Terminate.
1.Insert at begin.
2.Insert at end.
3.Delete Begin.
4.Delete End.
5.Display.
""")
while ch is not 0:
  ch=int(input("Enter Choice"))
  if ch is 1:
    n=int(input("Enter N: "))
    for i in range (0,n):
      d=int(input())
      L1.InsertBegin(d)
    print("\nInsertion at Begin Successful\n")
  if ch is 2:
    n=int(input("Enter N: "))
    for i in range (0,n):
      d=int(input())
      L1.InsertEnd(d)
    print("\nInsertion at End Successful\n")
  if ch is 3:
    L1.DeleteBegin()
  if ch is 4:
    L1.DeleteEnd()
  if ch is 5:
    L1.Display() 
